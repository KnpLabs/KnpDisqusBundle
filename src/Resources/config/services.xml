<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Knp\Bundle\DisqusBundle\Disqus" class="Knp\Bundle\DisqusBundle\Disqus">
            <argument>%knp_disqus.api_key%</argument>
            <argument>%knp_disqus.secret_key%</argument>
            <argument>%knp_disqus.base_url%</argument>
            <argument>%kernel.debug%</argument>
        </service>

        <service id="Knp\Bundle\DisqusBundle\Twig\Extension\DisqusExtension" class="Knp\Bundle\DisqusBundle\Twig\Extension\DisqusExtension">
            <argument type="service">
                <service id="Knp\Bundle\DisqusBundle\Helper\DisqusHelper" class="Knp\Bundle\DisqusBundle\Helper\DisqusHelper">
                    <argument type="service" id="twig"/>
                    <argument type="service" id="Knp\Bundle\DisqusBundle\Disqus"/>
                    <argument>%kernel.environment%</argument>
                </service>
            </argument>
            <tag name="twig.extension"/>
        </service>
    </services>
</container>
